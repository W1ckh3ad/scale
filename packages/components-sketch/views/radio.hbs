<div data-sketch-artboard="Radio Buttons" class="artboard">
    <h1 class="title--artboard">Radio Buttons</h1>

    <h2 class="title--artboard-section">Default</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-input type="radio" label="Radio Button"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-input type="radio" label="Radio Button" data-sketch-state="hover"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-input type="radio" label="Radio Button" data-sketch-state="focus"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-input type="radio" label="Radio Button" data-sketch-state="active"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <scale-input type="radio" label="Radio Button" disabled></scale-input>
        </div>
    </div>

    <h2 class="title--artboard-section">Default Error</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-input status="error" type="radio" label="Radio Button"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-input status="error" type="radio" label="Radio Button" data-sketch-state="hover"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-input status="error" type="radio" label="Radio Button" data-sketch-state="focus"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-input status="error" type="radio" label="Radio Button" data-sketch-state="active"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
        </div>
    </div>

  <h2 class="title--artboard-section">Selected</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-input pre-checked type="radio" label="Radio Button"></scale-input>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-input pre-checked type="radio" label="Radio Button" data-sketch-state="focus"></scale-input>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:pressed</p>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      <scale-input pre-checked type="radio" label="Radio Button" disabled></scale-input>
    </div>
  </div>
</div>
