<div data-sketch-artboard="Radio Buttons" class="artboard">
    <h1 class="title--artboard">Radio Buttons</h1>

    <h2 class="title--artboard-section">Standard</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-input type="radio" label="Radio Button Label" data-sketch-key="radio-1"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-input type="radio" label="Radio Button Label" data-sketch-state="hover" data-sketch-key="radio-2"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-input type="radio" label="Radio Button Label" data-sketch-state="focus" data-sketch-key="radio-3"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-input type="radio" label="Radio Button Label" data-sketch-state="active" data-sketch-key="radio-4"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <scale-input type="radio" label="Radio Button Label" disabled data-sketch-key="radio-5"></scale-input>
        </div>
    </div>

    <h2 class="title--artboard-section">Standard Error</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-input status="error" helper-text="Error message" type="radio" label="Radio Button Label" data-sketch-key="radio-6"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-input status="error" helper-text="Error message" type="radio" label="Radio Button Label" data-sketch-state="hover" data-sketch-key="radio-7"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-input status="error" helper-text="Error message" type="radio" label="Radio Button Label" data-sketch-state="focus" data-sketch-key="radio-8"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-input status="error" helper-text="Error message" type="radio" label="Radio Button Label" data-sketch-state="active" data-sketch-key="radio-9"></scale-input>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
        </div>
    </div>

  <h2 class="title--artboard-section">Selected</h2>
  <div class="agent-states--grid">
    <div class="agent-states--item">
      <p class="agent-states--label">:available</p>
      <scale-input checked type="radio" label="Radio Button Label" data-sketch-key="radio-10"></scale-input>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:hover</p>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:focus</p>
      <scale-input checked type="radio" label="Radio Button Label" data-sketch-state="focus" data-sketch-key="radio-11"></scale-input>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:pressed</p>
    </div>
    <div class="agent-states--item">
      <p class="agent-states--label">:disabled</p>
      <scale-input checked type="radio" label="Radio Button Label" disabled data-sketch-key="radio-12"></scale-input>
    </div>
  </div>
</div>


<script src="/symbol_names.js"></script>
<script>
    Array.from(document.querySelectorAll("scale-input")).forEach(btn => {
        btn.dataset.sketchSymbol = `Radio Button / ${
                order(1, btn.hasAttribute('checked') ? 'Selected' : 'Standard')
            } / ${
                order(2, btn.getAttribute('status') === 'error' ? 'Error On' : 'Error Off')
            } / ${
                order(4, getStateName(btn))
            }`;
    });
</script>