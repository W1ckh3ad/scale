<!DOCTYPE html>
<html dir="ltr" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=5.0"
    />
    <title>{{title}}</title>
    <script type="module" src="/dist/scale-components/scale-components.esm.js"></script>
    <script nomodule src="/dist/scale-components/scale-components.js"></script>
    <link rel="stylesheet" href="/dist/fonts/scale-fonts-telekom.css" />
    <link rel="stylesheet" href="style.css" />
    <script type="module">
      import { useTheme, getTheme } from '/dist/theme.esm.js';

      const theme = getTheme();

      const buttonIconVariant = {
        'button--variant-icon': {
          background: 'none',
          border: 'none',
          '&, &:focus, &.focus': {
            background: 'none',
            border: 'none',
            outlineColor: '#009DE0',
            color: '#161616',
            '--icon-color': '#161616'
          },
          '&:hover, &.hover': {
            background: 'none',
            border: 'none',
            color: '#E20074',
            '--icon-color': '#e20074'
          },
          '&:active, &.active, &.selected': {
            background: 'none',
            border: 'none',
            color: '#CB0068',
            '--icon-color': '#cb0068'
          }
        }
      };

      const buttonIconDarkVariant = {
        'button--variant-icon-dark': {
          background: 'none',
          border: 'none',
          '&, &:focus, &.focus': {
            background: 'none',
            border: 'none',
            outlineColor: '#009DE0'
          },
          '&:hover, &.hover': {
            background: 'none',
            border: 'none',
            color: '#E20074',
            '--icon-color': '#e20074'
          },
          '&:active, &.active, &.selected': {
            background: 'none',
            border: 'none'
          }
        }
      };

      // Separate, otherwise one `'button--disabled'` declaration "deletes" the other
      const buttonDisabledVariants = {
        'button--disabled': {
          '&$button--variant-icon, &$button--variant-icon:hover': {
            background: 'none',
            border: 'none',
            color: '#CDCDCD',
            '--icon-color': '#CDCDCD'
          },
          '&$button--variant-icon-dark, &$button--variant-icon-dark:hover': {
            background: 'none',
            border: 'none',
            color: '#a4a4a4',
            '--icon-color': '#a4a4a4'
          }
        }
      };

      useTheme({
        components: {
          Button: {
            ...buttonIconVariant,
            ...buttonIconDarkVariant,
            ...buttonDisabledVariants
          }
        }
      });
    </script>
</head>

<body>
    {{{body}}}
</body>
</html>
