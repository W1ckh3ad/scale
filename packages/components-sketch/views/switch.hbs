<div data-sketch-artboard="Switch" class="artboard">
    <h1 class="title--artboard">Switch</h1>

    <h2 class="title--artboard-section">Selected On</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-switch label="Switch Label" active data-sketch-key="switch-1"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-switch label="Switch Label" active data-sketch-state="hover" data-sketch-key="switch-2"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-switch label="Switch Label" active data-sketch-state="focus" data-sketch-key="switch-3"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-switch label="Switch Label" active data-sketch-state="active" data-sketch-key="switch-4"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <scale-switch label="Switch Label" active disabled data-sketch-key="switch-5"></scale-switch>
        </div>
    </div>

    <h2 class="title--artboard-section">Selected Off</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <scale-switch data-sketch-key="switch-10"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <scale-switch label="Switch Label" data-sketch-state="hover" data-sketch-key="switch-6"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <scale-switch label="Switch Label" data-sketch-state="focus" data-sketch-key="switch-7"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <scale-switch label="Switch Label" data-sketch-state="active" data-sketch-key="switch-8"></scale-switch>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <scale-switch label="Switch Label" disabled data-sketch-key="switch-9"></scale-switch>
        </div>
    </div>
</div>


<script src="/symbol_names.js"></script>
<script>
    Array.from(document.querySelectorAll(".switch")).forEach(btn => {
        btn.dataset.sketchSymbol = `Switch / ${
                order(1, btn.hasAttribute('active') ? 'Selected On' : 'Selected Off')
            } / ${
                order(4, getStateName(btn))
            }`;
    });
</script>