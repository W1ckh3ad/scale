<div data-sketch-artboard="Switch" class="artboard">
    <h1 class="title--artboard">Switch</h1>

    <h2 class="title--artboard-section">Selected On</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <div class="switch-wrapper">Lights <scale-switch text-on="I" text-off="0" active></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" active data-sketch-state="hover"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" active data-sketch-state="focus"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" active data-sketch-state="active"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" active disabled></scale-switch></div>
        </div>
    </div>

    <h2 class="title--artboard-section">Selected Off</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
            <p class="agent-states--label">:available</p>
            <div class="switch-wrapper">Lights <scale-switch></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:hover</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" data-sketch-state="hover"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:focus</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" data-sketch-state="focus"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:pressed</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" data-sketch-state="active"></scale-switch></div>
        </div>
        <div class="agent-states--item">
            <p class="agent-states--label">:disabled</p>
            <div class="switch-wrapper">Lights<scale-switch text-on="I" text-off="0" disabled></scale-switch></div>
        </div>
    </div>
</div>
