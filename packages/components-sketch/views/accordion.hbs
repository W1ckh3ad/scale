<div data-sketch-artboard="Accordion" class="artboard" data-sketch-unnamed-component-path="Accordion">
    <h1 class="title--artboard">Accordion</h1>

    <h2 class="title--artboard-section">Agent States</h2>
    <div class="agent-states--grid">
        <div class="agent-states--item">
          <p class="agent-states--label">:available</p>
          <scale-accordion data-sketch-key="accordion-1">
            <scale-collapsible>
              <scale-text slot="headline" variant="collapsible">Accordion Label</scale-text>
            </scale-collapsible>
          </scale-accordion>
        </div>
        <div class="agent-states--item">
          <p class="agent-states--label">:hover</p>
          <scale-accordion data-sketch-key="accordion-2" data-sketch-state="hover">
            <scale-collapsible is-expanded>
              <scale-text slot="headline" variant="collapsible">Accordion Label</scale-text>
            </scale-collapsible>
          </scale-accordion>
        </div>
        <div class="agent-states--item">
          <p class="agent-states--label">:focus</p>
          <scale-accordion data-sketch-key="accordion-3" data-sketch-state="focus">
            <scale-collapsible is-expanded>
              <scale-text slot="headline" variant="collapsible">Accordion Label</scale-text>
            </scale-collapsible>
          </scale-accordion>
        </div>
        <div class="agent-states--item">
          <p class="agent-states--label">:pressed</p>
          <scale-accordion data-sketch-key="accordion-4" data-sketch-state="active">
            <scale-collapsible is-expanded>
              <scale-text slot="headline" variant="collapsible">Accordion Label</scale-text>
            </scale-collapsible>
          </scale-accordion>
        </div>
        <div class="agent-states--item">
          <p class="agent-states--label">:disabled</p>
          â€“
        </div>
    </div>
</div>

<script src="/symbol_names.js"></script>
<script>
    Array.from(document.querySelectorAll("scale-accordion")).forEach(btn => {
        btn.dataset.sketchSymbol = `Accordion / ${
                order(1, btn.firstElementChild.hasAttribute("is-expanded") ? 'Extended' : 'Collapsed')
            } / ${
                order(4, getStateName(btn))
            }`;
    });
</script>